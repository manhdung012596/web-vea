@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 text-pink fw-bold">ĐĂNG NHẬP</h3>
                    
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label class="form-label">Tên đăng nhập</label>
                            <input type="text" class="form-control" name="tenDangNhap" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" name="matKhau" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mb-3 custom-pink-btn">Đăng nhập</button>
                    </form>

                    <div class="text-center">
                        <p class="mb-0">Chưa có tài khoản? <a href="/Account/Register" class="text-pink text-decoration-none">Đăng ký ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .custom-pink-btn {
        background-color: #ffb7c5; 
        border-color: #ffb7c5;
        color: #fff;
    }
    .text-pink { color: #d63384; }
</style>
