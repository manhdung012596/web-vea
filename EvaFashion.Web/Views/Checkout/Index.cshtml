@model EvaFashion.Web.Models.DonHang
@{
    ViewData["Title"] = "Thanh toán";
    var cart = ViewBag.Cart as List<EvaFashion.Web.Models.CartItem>;
    decimal total = ViewBag.Total ?? 0;
}

<div class="container py-5">
    <div class="row">
        <!-- Billing Info -->
        <div class="col-md-7">
            <h4 class="fw-bold mb-4">Thông tin giao hàng</h4>
            <form asp-action="PlaceOrder" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Họ tên người nhận <span class="text-danger">*</span></label>
                    <input asp-for="HoTen" class="form-control" required placeholder="Nguyễn Văn A">
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                    <input asp-for="SoDienThoai" class="form-control" required placeholder="09xxxxxxx">
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Địa chỉ nhận hàng <span class="text-danger">*</span></label>
                    <input asp-for="DiaChi" class="form-control" required placeholder="123 Đường ABC, Quận X...">
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ghi chú (tùy chọn)</label>
                    <textarea asp-for="GhiChu" class="form-control" rows="3" placeholder="Giao hàng trong giờ hành chính..."></textarea>
                </div>

                <h4 class="fw-bold mt-5 mb-4">Phương thức thanh toán</h4>
                <div class="mb-4">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" asp-for="PhuongThucThanhToan" value="COD" id="cod" checked>
                        <label class="form-check-label" for="cod">
                            Thanh toán khi nhận hàng (COD)
                        </label>
                    </div>
                     <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" asp-for="PhuongThucThanhToan" value="QR" id="ck">
                        <label class="form-check-label" for="ck">
                            Thanh toán qua QR Code / Chuyển khoản
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn btn-dark w-100 py-3 fw-bold shadow-sm">
                    ĐẶT HÀNG NGAY
                </button>
            </form>
        </div>

        <!-- Order Summary -->
        <div class="col-md-5">
            <div class="card border mb-3 shadow-sm bg-light">
                 <div class="card-header bg-white fw-bold">Đơn hàng của bạn</div>
                 <div class="card-body">
                     @if (cart != null)
                     {
                         foreach (var item in cart)
                        {
                            <div class="d-flex justify-content-between mb-3 border-bottom pb-2">
                                <div>
                                    <h6 class="mb-0">@item.ProductName x @item.Quantity</h6>
                                    <small class="text-muted">@item.ColorName / @item.SizeName</small>
                                </div>
                                <span>@item.Total.ToString("N0") đ</span>
                            </div>
                        }
                     }
                     <div class="d-flex justify-content-between mt-3">
                         <span>Tạm tính</span>
                         <span class="fw-bold">@total.ToString("N0") đ</span>
                     </div>
                     <div class="d-flex justify-content-between mt-2">
                         <span>Phí vận chuyển</span>
                         <span class="text-success">Miễn phí</span>
                     </div>
                     <hr>
                     <div class="d-flex justify-content-between fs-5 text-dark fw-bold">
                         <span>Tổng cộng</span>
                         <span class="text-danger">@total.ToString("N0") đ</span>
                     </div>
                 </div>
            </div>
        </div>
    </div>
</div>
