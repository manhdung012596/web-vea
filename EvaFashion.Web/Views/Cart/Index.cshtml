@model List<EvaFashion.Web.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Giỏ hàng của bạn</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            Giỏ hàng đang trống. <a href="/Shop" class="alert-link">Tiếp tục mua sắm</a>.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@item.Image" class="rounded me-3" style="width: 60px; height: 80px; object-fit: cover;">
                                            <div>
                                                <h6 class="mb-0">@item.ProductName</h6>
                                                <small class="text-muted">Màu: @item.ColorName | Size: @item.SizeName</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.Price.ToString("N0") đ</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">@item.Quantity</span>
                                    </td>
                                    <td class="fw-bold text-dark">@item.Total.ToString("N0") đ</td>
                                    <td>
                                        <a href="/Cart/Remove?variantId=@item.VariantId" class="text-danger" onclick="return confirm('Xóa sản phẩm này?')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body">
                        <h5 class="fw-bold mb-4">Tổng đơn hàng</h5>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tạm tính:</span>
                            <span class="fw-bold">@Model.Sum(i => i.Total).ToString("N0") đ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3 text-success">
                            <span>Giảm giá:</span>
                            <span>0 đ</span>
                        </div>
                         <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fs-5 fw-bold">Tổng cộng:</span>
                            <span class="fs-5 fw-bold text-danger">@Model.Sum(i => i.Total).ToString("N0") đ</span>
                        </div>

                        <a href="/Checkout" class="btn btn-dark w-100 py-2">XÁC NHẬN MUA HÀNG</a>
                        <a href="/Shop" class="btn btn-outline-secondary w-100 py-2 mt-2">Tiếp tục mua hàng</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
