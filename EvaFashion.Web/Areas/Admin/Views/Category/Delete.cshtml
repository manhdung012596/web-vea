@model EvaFashion.Web.Models.DanhMuc
@{
    ViewData["Title"] = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="card-title mb-0">Xác nhận xóa</h5>
            </div>
            <div class="card-body">
                <p class="lead">Bạn có chắc chắn muốn xóa danh mục này không?</p>
                <dl class="row">
                    <dt class="col-sm-4">Tên danh mục</dt>
                    <dd class="col-sm-8 fw-bold">@Model.TenDanhMuc</dd>

                    <dt class="col-sm-4">Slug</dt>
                    <dd class="col-sm-8">@Model.Slug</dd>
                </dl>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                        <button type="submit" class="btn btn-danger">Xóa luôn</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
