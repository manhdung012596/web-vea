@model EvaFashion.Web.Models.DonHang
@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.MaDonHangCode}";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Đơn hàng #@Model.MaDonHangCode</h2>
        <div class="text-muted">Ngày đặt: @Model.NgayDat?.ToString("dd/MM/yyyy HH:mm")</div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
        <button class="btn btn-secondary" onclick="window.print()">
            <i class="bi bi-printer me-2"></i>In hóa đơn
        </button>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <!-- Products -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0">Sản phẩm</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Sản phẩm</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th class="text-end pe-4">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ChiTietDonHangs)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.BienTheSanPham?.SanPham?.HinhAnhChinh))
                                        {
                                            <img src="@item.BienTheSanPham.SanPham.HinhAnhChinh" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px; margin-right: 15px;" />
                                        }
                                        <div>
                                            <div class="fw-bold">@item.BienTheSanPham?.SanPham?.TenSanPham</div>
                                            <small class="text-muted">
                                                @(item.BienTheSanPham?.MauSac?.TenMau) / @(item.BienTheSanPham?.KichCo?.TenKichCo)
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.DonGia?.ToString("N0") đ</td>
                                <td>x @item.SoLuong</td>
                                <td class="text-end pe-4 fw-bold">@item.ThanhTien?.ToString("N0") đ</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-light">
                        <tr>
                            <td colspan="3" class="text-end fw-bold pt-3">Tổng tiền hàng:</td>
                            <td class="text-end pe-4 pt-3">@Model.TongTien?.ToString("N0") đ</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-end fw-bold pb-3 border-0">Phí vận chuyển:</td>
                            <td class="text-end pe-4 pb-3 border-0">@Model.PhiVanChuyen?.ToString("N0") đ</td>
                        </tr>
                        <tr class="fs-5 text-primary">
                            <td colspan="3" class="text-end fw-bold pt-3">Tổng cộng:</td>
                            <td class="text-end pe-4 pt-3 fw-bold">@((Model.TongTien + Model.PhiVanChuyen)?.ToString("N0")) đ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <!-- Workflow Actions -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0">Xử lý đơn hàng</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="small text-muted mb-1">Trạng thái hiện tại</label>
                    <div>
                        @if (Model.TrangThai == "ChoXacNhan")
                        {
                            <span class="badge bg-warning text-dark fs-6 w-100 py-2">Chờ xác nhận</span>
                        }
                        else if (Model.TrangThai == "DangGiao")
                        {
                            <span class="badge bg-info fs-6 w-100 py-2">Đang giao hàng</span>
                        }
                        else if (Model.TrangThai == "HoanThanh")
                        {
                            <span class="badge bg-success fs-6 w-100 py-2">Hoàn thành</span>
                        }
                        else if (Model.TrangThai == "DaHuy")
                        {
                            <span class="badge bg-danger fs-6 w-100 py-2">Đã hủy</span>
                        }
                    </div>
                </div>

                <hr />

                <div class="d-grid gap-2">
                    @if (Model.TrangThai == "ChoXacNhan")
                    {
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@Model.MaDonHang" />
                            <input type="hidden" name="trangThai" value="DangGiao" />
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-truck me-2"></i>Xác nhận & Giao hàng
                            </button>
                        </form>
                        
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@Model.MaDonHang" />
                            <input type="hidden" name="trangThai" value="DaHuy" />
                            <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này?');">
                                <i class="bi bi-x-circle me-2"></i>Hủy đơn hàng
                            </button>
                        </form>
                    }
                    else if (Model.TrangThai == "DangGiao")
                    {
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@Model.MaDonHang" />
                            <input type="hidden" name="trangThai" value="HoanThanh" />
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle me-2"></i>Đã giao hàng thành công
                            </button>
                        </form>
                         <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@Model.MaDonHang" />
                            <input type="hidden" name="trangThai" value="DaHuy" />
                            <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Khách không nhận hàng?');">
                                <i class="bi bi-x-circle me-2"></i>Hủy (Hoàn đơn)
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

        <!-- Customer Info -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0">Thông tin khách hàng</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="small text-muted">Họ tên</label>
                    <div class="fw-bold">@Model.HoTen</div>
                </div>
                <div class="mb-3">
                    <label class="small text-muted">Số điện thoại</label>
                    <div class="fw-bold">@Model.SoDienThoai</div>
                </div>
                <div class="mb-3">
                    <label class="small text-muted">Địa chỉ giao hàng</label>
                    <div>@Model.DiaChi</div>
                </div>
                <div>
                     <label class="small text-muted">Ghi chú</label>
                    <div class="fst-italic text-muted">@(string.IsNullOrEmpty(Model.GhiChu) ? "Không có ghi chú" : Model.GhiChu)</div>
                </div>
            </div>
        </div>
    </div>
</div>
