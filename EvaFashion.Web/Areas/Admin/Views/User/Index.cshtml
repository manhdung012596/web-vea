@model IEnumerable<EvaFashion.Web.Models.NguoiDung>
@{
    ViewData["Title"] = "Quản lý Người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Người dùng</h2>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">ID</th>
                    <th>Họ tên</th>
                    <th>Email / SĐT</th>
                    <th>Tài khoản</th>
                    <th>Ngày tạo</th>
                    <th>Vai trò</th>
                    <th class="text-end pe-4">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">@item.MaNguoiDung</td>
                        <td class="fw-bold">@item.HoTen</td>
                        <td>
                            <div>@item.Email</div>
                            <small class="text-muted">@item.Sdt</small>
                        </td>
                        <td>@item.TenDangNhap</td>
                        <td>@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.VaiTro == "admin")
                            {
                                <span class="badge bg-danger">Admin</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Khách hàng</span>
                            }
                        </td>
                        <td class="text-end pe-4">
                            @if (item.VaiTro != "admin")
                            {
                                <a asp-action="ChangeRole" asp-route-id="@item.MaNguoiDung" asp-route-role="admin" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc muốn cấp quyền Admin cho user này?');">
                                    <i class="bi bi-shield-lock-fill me-1"></i>Thăng cấp Admin
                                </a>
                            }
                            else
                            {
                                <a asp-action="ChangeRole" asp-route-id="@item.MaNguoiDung" asp-route-role="khachhang" class="btn btn-sm btn-outline-secondary" onclick="return confirm('Hủy quyền Admin?');">
                                    <i class="bi bi-person me-1"></i>Hạ cấp
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
