@model EvaFashion.Web.Models.MauSac
@{
    ViewData["Title"] = "Sửa màu sắc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0">Chỉnh sửa màu</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaMau" />
                    
                    <div class="mb-3">
                        <label asp-for="TenMau" class="form-label">Tên màu</label>
                        <input asp-for="TenMau" class="form-control" />
                        <span asp-validation-for="TenMau" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MaHex" class="form-label">Mã màu (Hex)</label>
                        <div class="input-group">
                            <input asp-for="MaHex" class="form-control" type="color" style="height: 38px; max-width: 60px;" />
                            <input asp-for="MaHex" class="form-control" />
                        </div>
                        <span asp-validation-for="MaHex" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
