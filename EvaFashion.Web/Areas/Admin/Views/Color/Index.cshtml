@model IEnumerable<EvaFashion.Web.Models.MauSac>
@{
    ViewData["Title"] = "Quản lý Màu sắc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Màu sắc</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Thêm mới
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">ID</th>
                    <th>Tên màu</th>
                    <th>Mã Hex</th>
                    <th>Hiển thị</th>
                    <th class="text-end pe-4">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">@item.MaMau</td>
                        <td class="fw-bold">@item.TenMau</td>
                        <td>@item.MaHex</td>
                        <td>
                            <div style="width: 30px; height: 30px; background-color: @item.MaHex; border: 1px solid #ddd; border-radius: 4px;"></div>
                        </td>
                        <td class="text-end pe-4">
                            <a asp-action="Edit" asp-route-id="@item.MaMau" class="btn btn-sm btn-outline-primary me-2">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MaMau" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
