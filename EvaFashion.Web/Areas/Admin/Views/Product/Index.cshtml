@model IEnumerable<EvaFashion.Web.Models.SanPham>
@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Sản phẩm</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Thêm mới
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Danh mục</th>
                    <th>Giá bán</th>
                    <th>Trạng thái</th>
                    <th class="text-end pe-4">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.IsActive == false ? "opacity-50" : "")">
                        <td class="ps-4">
                            @if (!string.IsNullOrEmpty(item.HinhAnhChinh))
                            {
                                <img src="@item.HinhAnhChinh" alt="@item.TenSanPham" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" />
                            }
                            else
                            {
                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; border-radius: 4px;">No IMG</div>
                            }
                        </td>
                        <td>
                            <div class="fw-bold">@item.TenSanPham</div>
                            <small class="text-muted">Slug: @item.Slug</small>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark border">@item.DanhMuc?.TenDanhMuc</span>
                        </td>
                        <td>
                            <div class="fw-bold">@item.GiaGoc.ToString("N0") đ</div>
                            @if (item.PhanTramGiam > 0)
                            {
                                <small class="text-danger">-@item.PhanTramGiam%</small>
                            }
                        </td>
                        <td>
                            @if (item.IsActive == true)
                            {
                                <span class="badge bg-success">Hiển thị</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Đã ẩn</span>
                            }
                        </td>
                        <td class="text-end pe-4">
                            <a asp-controller="Variant" asp-action="Index" asp-route-productId="@item.Id" class="btn btn-sm btn-outline-info me-2" title="Quản lý biến thể">
                                <i class="bi bi-layers"></i> Biến thể
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-2">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
