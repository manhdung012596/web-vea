@model EvaFashion.Web.Models.BaiViet
@{
    ViewData["Title"] = "Xóa bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="card-title mb-0">Xác nhận xóa</h5>
            </div>
            <div class="card-body">
                <p>Bạn có chắc chắn muốn xóa bài viết này?</p>
                <h4 class="fw-bold">@Model.TieuDe</h4>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                        <button type="submit" class="btn btn-danger">Xóa bài viết</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
