@model EvaFashion.Web.Models.BienTheSanPham
@{
    var productId = ViewData["ProductId"];
    ViewData["Title"] = "Thêm biến thể";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0">Thêm biến thể mới</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="SanPhamId" value="@productId" />
                    
                    <div class="mb-3">
                        <label asp-for="MauId" class="form-label">Màu sắc</label>
                        <select asp-for="MauId" class="form-select" asp-items="ViewBag.MauId"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="KichCoId" class="form-label">Kích cỡ</label>
                        <select asp-for="KichCoId" class="form-select" asp-items="ViewBag.KichCoId"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SoLuongTon" class="form-label">Số lượng tồn kho</label>
                        <input asp-for="SoLuongTon" class="form-control" type="number" min="0" value="0" />
                        <span asp-validation-for="SoLuongTon" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" asp-route-productId="@productId" class="btn btn-secondary">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary">Lưu lại</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
