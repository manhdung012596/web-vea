@model IEnumerable<EvaFashion.Web.Models.BienTheSanPham>
@{
    var sanPham = ViewData["SanPham"] as EvaFashion.Web.Models.SanPham;
    ViewData["Title"] = $"Biến thể: {sanPham?.TenSanPham}";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Quản lý biến thể</h2>
        <h5 class="text-muted">Sản phẩm: <span class="text-primary">@sanPham?.TenSanPham</span></h5>
    </div>
    <div>
        <a href="/Admin/Product" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
        <a asp-action="Create" asp-route-productId="@sanPham?.Id" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Thêm biến thể
        </a>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Màu sắc</th>
                    <th>Kích cỡ</th>
                    <th>Tồn kho</th>
                    <th class="text-end pe-4">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div style="width: 20px; height: 20px; background-color: @item.MauSac?.MaHex; border: 1px solid #ddd; border-radius: 50%; margin-right: 10px;"></div>
                                    <span>@item.MauSac?.TenMau</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border">@item.KichCo?.TenKichCo</span>
                            </td>
                            <td>
                                @if (item.SoLuongTon < 10)
                                {
                                    <span class="text-danger fw-bold">@item.SoLuongTon (Sắp hết)</span>
                                }
                                else
                                {
                                    <span class="text-success fw-bold">@item.SoLuongTon</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa biến thể này?');" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2 opacity-50"></i>
                            Chưa có biến thể nào được tạo.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
