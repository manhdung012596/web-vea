@model IEnumerable<EvaFashion.Web.Models.Voucher>
@{
    ViewData["Title"] = "Quản lý Mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Mã giảm giá (Voucher)</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Thêm mã mới
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Mã Code</th>
                    <th>Giá trị giảm</th>
                    <th>Thời gian</th>
                    <th>Số lượng</th>
                    <th class="text-end pe-4">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var isActive = item.TrangThai == true && (item.NgayKetThuc == null || item.NgayKetThuc >= DateTime.Now);
                    <tr class="@(!isActive ? "opacity-50" : "")">
                        <td class="ps-4">
                            <span class="badge bg-info text-dark font-monospace fs-6">@item.MaCode</span>
                        </td>
                        <td class="fw-bold text-danger">
                            @if(item.Loai == "PhanTram")
                            {
                                <span>-@item.GiamGia?.ToString("0")%</span>
                            }
                            else
                            {
                                <span>-@item.GiamGia?.ToString("N0") đ</span>
                            }
                        </td>
                        <td>
                            <div>@item.NgayBatDau?.ToString("dd/MM/yyyy") - @item.NgayKetThuc?.ToString("dd/MM/yyyy")</div>
                            @if (!isActive)
                            {
                                <small class="text-danger">Hết hạn</small>
                            }
                        </td>
                        <td>@item.SoLuong</td>
                        <td class="text-end pe-4">
                             <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Xóa voucher này?');">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
